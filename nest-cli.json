{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "dtoFileNameSuffix": [
            ".entity.ts",
            ".output.ts",
            ".input.ts",
            ".dto.ts",
            ".interface.ts",
            ".criteria.ts",
            ".error.ts"
          ]
        }
      }
    ]
  }
}
